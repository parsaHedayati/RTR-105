#include <stdio.h>

int main()
{
    int a;
    while(0)
    {
        printf("will we see this text when it's 0 or not?\n");
    }
    while(1)
    {
        printf("will we see this text when it's 1 or not\n");
        break;
    }
    while(a<=20)
    {
        printf(" a = %d\n",a);
        a = a+ 2;
    }
    return 0;
}
